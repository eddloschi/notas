<div class="row">
  <% @notes.each do |note| %>
  <div class="col-md-4">
    <div class="well well-sm note" style="background-color: <%= note.color %>">
      <h4>
        <strong><%= note.title %></strong>
      </h4>
      <p><%= simple_format note.body %></p>
    </div>
  </div>
  <% end %>
</div>
